# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here

# Table Names
AIRTABLE_ROOMS_TABLE=Rooms
AIRTABLE_BOOKINGS_TABLE=Bookings
AIRTABLE_MENU_TABLE=Menu
AIRTABLE_ROOM_SERVICE_TABLE=RoomService

# Server Mode: 'stdio' for local use, 'http' for Railway/cloud deployment
SERVER_MODE=stdio

# Port for HTTP mode (Railway sets this automatically)
PORT=3000

# Optional: Environment
NODE_ENV=development
